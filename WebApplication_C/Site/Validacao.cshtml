
@using WebApplication_C.Classes


@{
    Layout = null;

    //Criar um objeto pessoa
    Usuario cliente = new Usuario();

    //Buscar os dados do formulario pelo método POST e inserir no objeto cliente
    cliente.senha = Request.Form["senha"];
    cliente.email = Request.Form["email"];

    Banco.DBConnect();
    Banco.Login(cliente.senha, cliente.email);

    if (Banco.Login(cliente.senha, cliente.email))
    {
        //Cria a estancia do obj HttpCookie passando o nome do mesmo

        HttpCookie cookie = new HttpCookie("nomeCookie");

        //Define o valor do cookie

        cookie.Value = "valorCookie";

        //Time para expiração (1min)

        DateTime dtNow = DateTime.Now;

        TimeSpan tsMinute = new TimeSpan(0, 0, 1, 0);

        cookie.Expires = dtNow + tsMinute;

        //Adiciona o cookie

        Response.Cookies.Add(cookie);

    }
    else
    {


    }


    <script src="~/JavaScript/JavaScript.js"></script>


}